generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model answer {
  answer_string     String
  id                String @default(dbgenerated()) @id
  poll              String
  votes             Int?   @default(0)
  poll_answerTopoll poll   @relation(fields: [poll], references: [id])
}

model poll {
  created  DateTime? @default(now())
  end_date DateTime
  id       String    @default(dbgenerated()) @id
  options  String
  question String
  title    String
  answer   answer[]
}

model voter {
  answers       String[]
  email         String?  @unique
  id            String   @default(dbgenerated()) @id
  ip            String
  polls_created String[]
}